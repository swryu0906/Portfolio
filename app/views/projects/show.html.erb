<header id="header-show">
  
	<div class="heading center-vertical">

		<div class="container">

			<div class="row">
				<div class="col-md-4">
					<%= image_tag @project.image_1, class: 'img-responsive' %>
				</div>
				<div class="col-md-4">
					<%= image_tag @project.image_2, class: 'img-responsive' %>
				</div>
			<div class="col-md-4">
					<%= image_tag @project.image_3, class: 'img-responsive' %>
				</div>
			</div>
			
			<p id="notice"><%= notice %></p>

			<p>
				<strong>Name:</strong>
				<%= @project.name %>
			</p>

			<p>
				<strong>Description:</strong>
				<%= @project.description %>
			</p>

			<p>
				<strong>Details:</strong>
				<%= @project.details %>
			</p>

			<p>
				<strong>Url:</strong>
				<%= @project.url %>
			</p>

			<%= link_to 'Edit', edit_project_path(@project) %> |
			<%= link_to 'Back', projects_path %>
		
		</div><!-- /.container -->
       
	</div>

	<%= render 'shared/link' %>

</header>