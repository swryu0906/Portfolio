<header>

    <div class="screen-wrapper" id="header-projects">

        <div class="heading center-vertical text-center">
            <h1 class="h1-64 animation-fade-in-y">Welcome to<br />Sungwon's Works</h1>
            <hr class="animation-expand">
            <h4 class="animation-fade-in">Here is a selection of work I've done.<br />To view my full portfolio,<br />please, click the below menu.</h4>
        </div>

        <%= render 'shared/link' %>
        
    </div><!--/.screen-wrapper -->
    
</header>


<!-- Page Contents -->
<section id="contents">

    <article>

        <div class="container">
          
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Page Heading
                        <small>Secondary Text</small>
                    </h1>
                </div>
            </div>
            <!-- /.row -->

            <!-- Projects -->

            <% @projects.each do |project| %>
            <div class="row">
                <div class="col-md-7">
                    <a href="#">
                        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                    </a>
                </div>
                <div class="col-md-5">
                    <h3><%= project.name.upcase %></h3>
                    <h4>Website</h4>
                    <p><%= project.description %></p>
                    <a class="btn btn-primary" href="">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <%= link_to "View Details", project, class: 'btn btn-primary'%>
                    <%= link_to "Live Demo", project.url, class: 'btn btn-success', target: '_blank' %>
                </div>
            </div>
            <!-- /.row -->
            
            <hr>

            <% end %>

        </div>
        <!-- /.container -->

    </article>

        <hr>
        
    <article>

        <div class="container">
          
            <!-- Pagination -->
            <div class="row text-center">
                <div class="col-lg-12">
                    <ul class="pagination">
                        <li>
                            <a href="#">&laquo;</a>
                        </li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li>
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#">&raquo;</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container -->

    </article>

        <hr>

    <article>

        <div class="container">
          
            <p id="notice"><%= notice %></p>

            <h1>Listing Projects</h1>

            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Details</th>
                  <th>Url</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @projects.each do |project| %>
                  <tr>
                    <td><%= project.name %></td>
                    <td><%= project.description %></td>
                    <td><%= project.details %></td>
                    <td><%= project.url %></td>
                    <td><%= link_to 'Show', project %></td>
                    <td><%= link_to 'Edit', edit_project_path(project) %></td>
                    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Project', new_project_path %>

        </div>
        <!-- /.container -->

    </article>
    
<hr>

</section>